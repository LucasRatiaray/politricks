{% extends "layout/base.html.twig" %}

{% block title %}Nouveau mot de passe - Politricks{% endblock %}

{% block content %}
<div class="min-h-screen flex flex-col items-center justify-center bg-gray-900">
    <div class="w-full max-w-md mx-auto p-8 rounded-lg flex flex-col items-center">
        <h2 class="text-white text-2xl font-bold mb-1">PoliTricks</h2>
        <p class="text-xs text-gray-400 mb-6">Réinitialisation de votre mot de passe</p>

        {% if error %}
            <div class="bg-red-700 text-white rounded px-3 py-2 mb-4 w-full text-center text-sm">{{ error }}</div>
        {% endif %}

        <form method="post" class="w-full">
            <div class="mb-4">
                <input 
                    type="password" 
                    name="password" 
                    placeholder="Nouveau mot de passe" 
                    required 
                    minlength="6"
                    class="w-full px-3 py-2 border border-gray-600 rounded-md bg-gray-800 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-red-500"
                >
            </div>
            <div class="mb-4">
                <input 
                    type="password" 
                    name="confirm_password" 
                    placeholder="Confirmer le mot de passe" 
                    required 
                    minlength="6"
                    class="w-full px-3 py-2 border border-gray-600 rounded-md bg-gray-800 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-red-500"
                >
            </div>

            <button 
                type="submit" 
                class="w-full py-2 px-4 bg-red-700 hover:bg-red-800 text-white text-sm font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 transition duration-150"
            >
                Changer mon mot de passe
            </button>
        </form>
        
        <div class="mt-4 text-center">
            <a href="{{ path('app_login') }}" class="text-sm text-gray-400 hover:text-white">
                ← Retour à la connexion
            </a>
        </div>
    </div>
</div>
{% endblock %}