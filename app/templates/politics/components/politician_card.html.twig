<div class="flex items-center gap-3 sm:gap-4 p-2 sm:p-3 rounded-lg cursor-pointer transition-colors {{ selected ? 'bg-gray-800 border-l-4 border-blue-600' : 'hover:bg-gray-800' }}">
    <img src="{{ politician.image }}" alt="{{ politician.name }}" class="w-12 h-12 sm:w-14 sm:h-14 rounded-lg object-cover flex-shrink-0" />
    <div class="min-w-0 flex-1">
        <div class="text-white font-semibold text-sm sm:text-base truncate">{{ politician.name }}</div>
        <div class="text-gray-400 text-xs sm:text-sm truncate">{{ politician.role }}</div>
    </div>
</div>