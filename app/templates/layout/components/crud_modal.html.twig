<div id="{{ modal_id }}" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50 hidden p-4">
    <div class="bg-[#101c2b] rounded-lg shadow-lg w-full max-w-{{ max_width|default('4xl') }} max-h-[90vh] flex flex-col">
        <div class="flex justify-between items-center p-6 border-b border-gray-600 flex-shrink-0">
            <h2 class="text-white text-lg font-semibold">{{ title }}</h2>
            <button type="button" class="text-gray-400 hover:text-white text-2xl font-bold leading-none focus:outline-none" data-close-modal="{{ modal_id }}">&times;</button>
        </div>
        <div class="text-gray-300 p-6 overflow-y-auto flex-1">
            {% include form_template with form_data|default({}) %}
        </div>
    </div>
</div> 