<div class="bg-gray-800 rounded-lg p-3 lg:p-4 shadow cursor-pointer border-2 {{ selected ? 'border-blue-500' : 'border-transparent' }} hover:border-blue-400 transition">
    <div class="flex items-center gap-3">
        {% if parti.logo is defined and parti.logo %}
            <img src="{{ parti.logo }}" alt="Logo {{ parti.nom|default('') }}" 
                 class="w-8 h-8 lg:w-10 lg:h-10 rounded-full object-cover bg-white flex-shrink-0" />
        {% else %}
            <div class="w-8 h-8 lg:w-10 lg:h-10 rounded-full flex items-center justify-center text-white font-bold flex-shrink-0 text-sm" 
                 style="background: {{ parti.couleur is defined and parti.couleur ? parti.couleur : '#444' }};">
                {{ parti.nom is defined and parti.nom ? parti.nom|first|upper : '?' }}
            </div>
        {% endif %}
        
        <div class="min-w-0 flex-1">
            <div class="text-white font-semibold text-sm lg:text-base break-words">
                {{ parti.nom is defined and parti.nom ? parti.nom : 'Nom inconnu' }}
            </div>
            {% if parti.slogan is defined and parti.slogan %}
                <div class="text-gray-400 text-xs break-words">{{ parti.slogan }}</div>
            {% endif %}
        </div>
    </div>
</div>